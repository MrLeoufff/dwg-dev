{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h2>Produit</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Description</th>
				<th>Prix</th>
				<th>Créer le</th>
				<th>Type</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.price }}
						€</td>
					<td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.type }}</td>
					<td>
						<a href="{{ path('app_product_index') }}" class="btn btn-secondary">
							<i class="fas fa-arrow-left"></i>
							Retour à la liste
						</a>
						<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">
							<i class="fas fa-edit"></i>
							Modifier
						</a>
						<a href="{{ path('app_product_delete', {'id': product.id}) }}" class="btn btn-danger">
							<i class="fas fa-delete"></i>
							Supprimer
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
